<Window x:Class="ServerSideWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerSideWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="300">
    <StackPanel>
        <Button x:Name="btnConnect" Margin="30 10 30 10" Height="30"
                Click="btnConnect_Click">Connect</Button>
        <Button x:Name="btnSend" Margin="30 0 30 10"
                Height="30"
                Click="btnSend_Click">Send</Button>
        <TextBox x:Name="txtSend" Width="235" Height="40" FontSize="20" VerticalAlignment="Center" />
        <Button x:Name="btnClose" Margin="30 10 30 10"
                Height="30"
                Click="btnClose_Click">Close</Button>

    </StackPanel>
</Window>
